<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvTipTotal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnFifteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onFifteen"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/fifteen_label" />

    <Button
        android:id="@+id/btnTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTen"
        android:layout_alignBottom="@+id/btnFifteen"
        android:layout_toLeftOf="@+id/btnFifteen"
        android:text="@string/ten_label" />

    <Button
        android:id="@+id/btnTwentyFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTwentyFive"
        android:layout_alignBottom="@+id/btnFifteen"
        android:layout_toRightOf="@+id/btnFifteen"
        android:text="@string/twentyfive_label" />

    <EditText
        android:id="@+id/etTipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:hint="@string/tip_prompt" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvTipIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etTipAmount"
        android:layout_below="@+id/btnFifteen"
        android:layout_marginTop="82dp"
        android:text="@string/tip_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTipIs"
        android:layout_toRightOf="@+id/btnTen"
        android:text="@string/tips_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
